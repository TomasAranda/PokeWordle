<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.WelcomeFragment"
    android:background="@drawable/welcome_screen">

    <ImageButton
        android:id="@+id/help_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginHorizontal="90dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/stats_button"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_button"
        android:contentDescription="@string/help_button"
        android:src="@drawable/ic_baseline_help_32"
        app:cornerRadius="100dp" />

    <ImageButton
        android:id="@+id/stats_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginHorizontal="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/help_button"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_button"
        android:contentDescription="@string/stats_button"
        android:src="@drawable/ic_baseline_bar_chart_32" />

    <Button
        android:id="@+id/play_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="330dp"
        android:layout_marginEnd="200dp"
        android:background="@drawable/round_transparent_button"
        android:contentDescription="@string/play_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>