<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".WelcomeFragment"
    android:background="@drawable/disenio_juego_limpia">

    <ImageView
        android:id="@+id/pokemon_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />

    <TextView
        android:id="@+id/difficulty_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/pokemon_solid"
        android:textColor="@color/black"
        android:textSize="30sp"
        tools:text="Level" />


    <Button
        android:id="@+id/hint_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/pokemon_solid"
        android:text="@string/show_hint"
        android:translationY="620dp" />

</RelativeLayout>