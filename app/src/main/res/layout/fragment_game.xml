<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".WelcomeFragment"
    android:background="@drawable/disenio_juego_limpia">

    <TextView
        android:id="@+id/difficulty_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:fontFamily="@font/pokemon_solid"
        android:textColor="@color/black"
        android:textSize="30sp"
        tools:text="Level" />

    <LinearLayout
        android:id="@+id/wordle_row_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center">
        <!--<TextView
            android:gravity="center"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:textSize="30sp"
            tools:text="P"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="5dp"
            android:background="#FAFAFA"/>-->
    </LinearLayout>
    <LinearLayout
        android:id="@+id/wordle_row_2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"/>
    <LinearLayout
        android:id="@+id/wordle_row_3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"/>
    <LinearLayout
        android:id="@+id/wordle_row_4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"/>
    <LinearLayout
        android:id="@+id/wordle_row_5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"/>
    <LinearLayout
        android:id="@+id/wordle_row_6"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/hint_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:fontFamily="@font/pokemon_solid"
        android:text="@string/show_hint" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="80sp"
        android:textAlignment="center"
        android:gravity="center"
        android:text="TECLADO"
        android:background="@color/teal_700"/>

</LinearLayout>